<% if @article.errors.any? %>
    <ul>
        <% @article.errors.full_messages.each do |error_msg| %>
            <li><%= error_msg %></li>
        <% end %>     
    </ul>
<% end %>
<%= form_with(model: @article, local: true, data:{ turbo:false }) do |form| %>
    <p>
        <%= form.label :title%></br>
        <%= form.text_field :title %>
    </p>
    <p>
        <%= form.label :body%></br>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Return to articles listing', articles_path %>
